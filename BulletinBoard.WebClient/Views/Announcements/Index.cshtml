@model List<BulletinBoard.WebClient.Models.Announcements.AnnouncementViewModel>
@using BulletinBoard.WebClient.Data

@{
    ViewData["Title"] = "Announcements";
    var categories =  CategoryData.Categories;
}

<div class="row">
    <!-- Announcements list -->
    <div class="col-md-9">
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@item.Title</h5>
                        <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                            @(item.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <p class="card-text">@item.Description.Substring(0, Math.Min(item.Description.Length, 150))...</p>
                    <p class="text-muted mb-1"><strong>Category:</strong> @item.CategoryName / @item.SubcategoryName</p>
                    <small class="text-muted">@item.CreatedDate.ToShortDateString()</small>
                </div>
            </div>
        }
    </div>
</div>